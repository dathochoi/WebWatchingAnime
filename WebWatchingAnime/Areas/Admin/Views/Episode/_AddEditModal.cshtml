<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm Sửa Episode</h4>
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="col-12 grid-margin stretch-card">

                    <div class="card">
                        <div class="card-body" id="horizontal-form">
                            <form class="form-horizontal" role="form" id="frmMaintainance">
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    <input type="hidden" id="hidIdM" value="0" />
                                    <input type="hidden" id="txtAimeIdM" value=@ViewData["Id"] />
                                    <label for="txtNameM" class="col-sm-2 col-4 control-label no-padding-right">Tên Episode</label>
                                    <div class="col-sm-10 col-8">
                                        <input type="text" name="txtNameM" class="form-control" id="txtNameM">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="txtSTTM" class="col-sm-2 col-4 control-label no-padding-right">STT</label>
                                    <div class="col-sm-10 col-8">
                                        <input type="number" name="txtSTTM" class="form-control" id="txtSTTM">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtSrcM" class="col-sm-2 col-4 control-label no-padding-right">Link</label>
                                    <div class="col-sm-10 col-8">
                                        <input type="text" name="txtSrcM" class="form-control" id="txtSrcM">
                                    </div>
                                </div>

                                <button type="submit" id="btnSave" class="btn btn-gradient-primary mr-2">Save</button>
                                @*<button class="btn btn-light">Cancel</button>*@
                                <button type="button" class="bootbox-close-button  btn btn-light" data-dismiss="modal">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

