<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600%7CUbuntu:300,400,500,700" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/Client-side/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="~/Client-side/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="~/Client-side/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Client-side/css/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="~/Client-side/css/nouislider.min.css">
    <link rel="stylesheet" href="~/Client-side/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Client-side/css/plyr.css">
    <link rel="stylesheet" href="~/Client-side/css/photoswipe.css">
    <link rel="stylesheet" href="~/Client-side/css/default-skin.css">
    <link rel="stylesheet" href="~/Client-side/css/main.css">
    <link href="~/css/mystyle.css" rel="stylesheet" />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="~/Client-side/icon/favicon-32x32.png" sizes="32x32">
    <link rel="apple-touch-icon" href="icon/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Client-side/icon/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Client-side/icon/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/Client-side/icon/apple-touch-icon-144x144.png">

    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Dmitry Volkov">
    <title>My Animes</title>

</head>
<body class="body">

    <div class="sign section--bg" data-bg="~/Client-side/img/section/section.jpg">

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="sign__content">
                        <!-- authorization form -->
                        <form id="frmLogin" action="" class="sign__form">
                            @Html.AntiForgeryToken()
                            <a href="/" class="sign__logo">
                                <img src="~/Client-side/img/logo.png" alt="">
                            </a>

                            <div class="sign__group">
                                <input type="text" class="sign__input" placeholder="Email" name="userName" id="txtUserName">
                            </div>

                            <div class="sign__group">
                                <input type="password" class="sign__input" placeholder="Password" name="password" id="txtPassword">
                            </div>

                            @*<div class="sign__group sign__group--checkbox">
                                    <input id="remember" name="remember" type="checkbox" checked="checked">
                                    <label for="remember">Remember Me</label>
                                </div>*@

                            <button id="btnLogin" class="sign__btn" type="button">Sign in</button>

                            <span class="sign__text">Don't have an account? <a href="/Admint/SignUp">Sign up!</a></span>

                            @*<span class="sign__text"><a href="#">Forgot password?</a></span>*@
                        </form>
                        <!-- end authorization form -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="~/Client-side/js/jquery-3.3.1.min.js"></script>
    <script src="~/Client-side/js/bootstrap.bundle.min.js"></script>
    <script src="~/Client-side/js/owl.carousel.min.js"></script>
    <script src="~/Client-side/js/jquery.mousewheel.min.js"></script>
    <script src="~/Client-side/js/jquery.mCustomScrollbar.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/localization/messages_vi.js"></script>
    <script src="~/Client-side/js/wNumb.js"></script>
    <script src="~/Client-side/js/nouislider.min.js"></script>
    <script src="~/Client-side/js/plyr.min.js"></script>
    <script src="~/Client-side/js/jquery.morelines.min.js"></script>
    <script src="~/Client-side/js/photoswipe.min.js"></script>
    <script src="~/Client-side/js/photoswipe-ui-default.min.js"></script>
    <script src="~/Client-side/js/main.js"></script>
    <script src="~/Admin/Login/index.js"></script>

    <script>
        var login = new loginController();
        login.init();
    </script>
</body>

</html>